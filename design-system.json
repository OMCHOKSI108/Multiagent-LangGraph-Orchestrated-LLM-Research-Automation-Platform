    "1_overview": {
      "title": "Overview & Design Philosophy",
      "description": "Design language for an AI-powered research and web scraping platform. Inspired by Anthropic Claude.ai and Anthropic.com — signals precision, intellectual depth, and trusted automation without being cold.",
      "principles": [
        {
          "name": "Research-First",
          "description": "Every visual decision supports reading, analysis, and data consumption",
          "inspired_by": "Claude.ai chat"
        },
        {
          "name": "Dark Editorial",
          "description": "Deep backgrounds, warm cream text — serious but not sterile",
          "inspired_by": "Anthropic.com"
        },
        {
          "name": "Precision Signals Trust",
          "description": "Tight spacing, monospace data, clear status indicators",
          "inspired_by": "Linear, Vercel"
        },
        {
          "name": "Zero Visual Noise",
          "description": "No decorative elements that don't serve function",
          "inspired_by": "Notion, Anthropic"
        },
        {
          "name": "Real-Time Native",
          "description": "Streaming, progress, live-state are first-class citizens",
          "inspired_by": "Custom system need"
        }
      ]
    },

