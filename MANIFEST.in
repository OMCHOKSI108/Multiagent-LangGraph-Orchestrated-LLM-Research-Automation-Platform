# Include documentation
include README.md
include LICENSE
include requirements.txt
include .env.example

# Include configuration files
recursive-include ai_engine/config *.py *.json *.yaml *.yml
recursive-include ai_engine/scripts *.sh *.py

# Include test files
recursive-include ai_engine/tests *.py

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include assets
recursive-include assets *.png *.jpg *.svg

# Exclude development files
exclude .gitignore
exclude .github/*
exclude *.pyc
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
