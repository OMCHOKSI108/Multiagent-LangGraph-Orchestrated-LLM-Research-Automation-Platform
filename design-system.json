    "10_tech_implementation": {
      "title": "Tech Stack & Implementation Notes",

      "stack": {
        "framework":   "React 18 (Vite)",
        "styling":     "Tailwind CSS",
        "components":  "Radix UI",
        "state":       "Zustand or React Context",
        "auth":        "JWT (stored in httpOnly cookie)",
        "realtime":    "Server-Sent Events (SSE)",
        "markdown":    "react-markdown + remark-gfm + rehype-highlight",
        "icons":       "Lucide React",
        "routing":     "React Router v6"
      },

      "sse_streaming_pattern": {
        "description": "Core real-time feature for AI agent log streaming.",
        "code": "const eventSource = new EventSource(`${API_URL}/events?jobId=${id}`, { headers: { Authorization: `Bearer ${token}` } }); eventSource.onmessage = (e) => { const data = JSON.parse(e.data); if (data.type === 'agent_log') appendLog(data.content); if (data.type === 'agent_change') setCurrentAgent(data.agent); if (data.type === 'complete') { setReport(data.markdown); setStatus('complete'); } if (data.type === 'error') { setStatus('failed'); setError(data.message); }; };",
        "states": ["connecting", "streaming", "complete", "failed"],
        "auto_scroll": "useEffect(() => { logRef.current?.scrollTo(0, logRef.current.scrollHeight); }, [logs]);"
      },

      "hitl_pattern": {
        "description": "Human-in-the-loop topic selection — blocks interaction until user confirms.",
        "states": ["running", "waiting_for_human", "complete", "failed"],
        "when_waiting": [
          "Stop auto-scrolling log",
          "Show Radix Dialog with proposed topics from AI",
          "Render highlighted callout card (accent border) in log stream",
          "User selects/edits → POST to /research/update-state",
          "Resume streaming on confirmation"
        ]
      },

      "markdown_rendering": {
        "packages": ["react-markdown", "remark-gfm", "react-syntax-highlighter"],
        "heading_font": "Playfair Display via custom MDX components prop",
        "body_font": "Inter via className overrides"
      },

      "env_variables": {
        "VITE_API_BASE_URL": "Points to Node.js Backend API (e.g. http://localhost:5000/api)",
        "VITE_AI_ENGINE_URL": "Points to Python FastAPI AI Engine (e.g. http://localhost:8000)"
      }
    },

